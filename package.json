{
  "name": "voc-admin",
  "private": true,
  "author": "coffee377",
  "license": "MIT",
  "scripts": {
    "start": "umi dev",
    "lib": "father build",
    "doc": "father doc dev",
    "doc:build": "father doc build",
    "doc:deploy": "father doc build",
    "build": "umi build",
    "test": "umi test --coverage",
    "lint:es": "eslint --ext .js src mock tests",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@ant-design/pro-layout": "^4.7.0",
    "ant-design-pro": "^2.3.2",
    "antd": "^3.24.3",
    "classnames": "^2.2.6",
    "dva": "^2.6.0-beta.6",
    "object-hash": "^2.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router": "^5.1.2",
    "redux": "^4.0.4",
    "umi": "^2.10.7",
    "umi-plugin-react": "^1.12.8",
    "umi-request": "^1.2.8"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.21",
    "@types/mockjs": "^1.0.2",
    "@types/object-hash": "^1.3.0",
    "express": "^4.17.1",
    "father": "^2.24.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mockjs": "latest",
    "prettier": "^1.18.2",
    "roadhog-api-doc": "latest",
    "umi-types": "^0.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.less": [
      "stylelint --syntax less",
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "defaults",
    "last 2 version",
    "Firefox > 20",
    "> 5%",
    "cover 99.5%",
    "not ie < 8"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "checkFiles": [
    "src/**/*.js*",
    "src/**/*.ts*",
    "src/**/*.less",
    "config/**/*.js*",
    "scripts/**/*.js"
  ]
}
